<table class="table">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Monto adeudado</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @cuenta_clientes.nil? %>
	 <tr>
    	<td>No hay cuentas</td>
  	</tr>
	<% else %>
    <% @cuenta_clientes.each do |cuenta_cliente| %>
      <tr>
        <td><%= cuenta_cliente.cliente.nombre %></td>
        <td><%= cuenta_cliente.monto_adeudado %></td>
        <td><%= cuenta_cliente.observacion %></td>
        <td><%= button_to 'Agregar detalles',new_negocio_cuenta_cliente_detalle_cliente_path(@negocio,cuenta_cliente),method: :get, class: 'btn btn-info btn-sm' %></td>
         <td><%= button_to 'Anotar pagos',new_negocio_cuenta_cliente_pago_cliente_path(@negocio,cuenta_cliente),method: :get, class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
     <% end %>
  </tbody>
</table>