        <td><%= detalle_cliente.detalle %></td>
        <td>$<%= detalle_cliente.monto %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<h4>Pagos realizados</h4>
<table class="table">
  <thead>
    <tr>
     <th>Fecha</th>
      <th>Usuario</th>
      <th>Detalle</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.created_at.strftime("%d/%m/%Y") %></td>
      
        <td><%= pago.usuario.nombre %></td>
        <td><%= pago.observacion %></td>
        <td>- $<%= pago.monto %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

