 <% if logged_in_admin? %>
        <%= render 'negocios/menu_negocio',negocio: @negocio %>
     <% elsif logged_in? %>
      <%= render 'negocios/menu_negocio_usuario',negocio: @negocio %>
      
   
    <% end %> 


<h4>Pago Proveedores</h4>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Monto</th>
      <th>Usuario</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pago_proveedores.each do |pago_proveedore| %>
      <tr>
        <td><%= pago_proveedore.cuenta_proveedor.created_at.strftime("%d/%m/%Y")%></td>
        <td>$<%= pago_proveedore.monto %></td>
        <td><%= pago_proveedore.usuario.nombre %></td>
        <td><%= pago_proveedore.observacion %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in_admin? %>
      <%= link_to 'Volver a cuenta', negocio_cuenta_proveedors_url(@negocio) %>
     <% elsif logged_in? %>
     <%= link_to 'Volver a cuenta', new_negocio_cuenta_proveedor_url(@negocio) %>
      
   
    <% end %> 



