<table class="table" id="tablav">
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Caja</th>
      <th>Total</th>
      <th colspan="3">Detalle</th>
    </tr>
  </thead>

  <tbody>
    <% @ventas.each do |venta| %>
      <tr>
        <td><%= venta.ticket %></td>
        <td><%= venta.caja.nombre %></td>
        <td><%= venta.total %></td>
        <td><%= button_to 'Ver', negocio_venta_detalle_ventas_path(@negocio,venta), method: :get,class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr bgcolor="#92fc94">
    <td colspan="1"></td>
    <td align="right"><label for="totallbl">Total:</label></td>
    <td><label for="total">$<%=@ventas.sum(&:total)%></label></td>
      
    </tr>
  </tfoot>
</table>

